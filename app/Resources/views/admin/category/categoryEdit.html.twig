{% extends "admin/layout.html.twig" %}

{% block content %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Kategori Düzenleme</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Yazı Kategorisini Düzenle
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                {{ form_start(form) }}
                                <div class="form-group">
                                    {{ form_label(form.title) }}
                                    {{ form_errors(form.title) }}
                                    {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
                                    <p class="help-block">Kategori Başlığı Giriniz.</p>
                                </div>


                                <div class="form-group">
                                    {{ form_label(form.status) }}
                                    {{ form_errors(form.status) }}
                                    {% for choiceFormView in form.status %}
                                        <div class="radio">
                                            <label>
                                                {{ form_widget(choiceFormView) }} {{ form_label(choiceFormView) }}
                                            </label>
                                        </div>
                                    {% endfor %}
                                </div>
                                {{ form_end(form) }}
                                <div style="margin-top: 10px">
                                    <div class="panel-body">
                                        <!-- Button trigger modal -->
                                        <button class="btn btn-danger btn-lg" data-toggle="modal" data-target="#myModal">
                                            Kategoriyi Sil
                                        </button>
                                        <!-- Modal -->
                                        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                        <h4 class="modal-title" id="myModalLabel">Kategori Silme işlemini onayla</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        {{ form.vars.data.title }} Kategorisini silmek istediğinizden emin misiniz? <br> Kategoriyi silerseniz, bağlı bulunduğu tüm sayfalar da geri dönüşümsüz olarak silinecektir.
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">Vazgeç</button>
                                                        <a href="{{ path("admin_category_delete",{id:form.vars.data.id }) }}"><button type="button" class="btn btn-primary">Onayla ve Sil</button></a>
                                                    </div>
                                                </div>
                                                <!-- /.modal-content -->
                                            </div>
                                            <!-- /.modal-dialog -->
                                        </div>
                                        <!-- /.modal -->
                                    </div>
                                </div>
                            </div>

                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->

    </div>

{% endblock %}